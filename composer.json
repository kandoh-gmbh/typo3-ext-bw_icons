{
  "name": "blueways/bw-icons",
  "type": "typo3-cms-extension",
  "description": "TYPO3-Extension that adds a icon form element",
  "keywords": [
    "TYPO3",
    "extension",
    "icons"
  ],
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "public",
      "extension-key": "bw_icons"
    }
  },
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true,
      "helhum/typo3-console-plugin": true
    }
  },
  "authors": [
    {
      "name": "Maik Schneider",
      "role": "Developer",
      "email": "m.schneider@blueways.de",
      "homepage": "https://www.blueways.de"
    }
  ],
  "license": [
    "GPL-3.0-or-later"
  ],
  "require-dev": {
    "typo3/cms-about": "^11.5",
    "typo3/cms-backend": "^11.5",
    "typo3/cms-belog": "^11.5",
    "typo3/cms-beuser": "^11.5",
    "typo3/cms-dashboard": "^11.5",
    "typo3/cms-extbase": "^11.5",
    "typo3/cms-extensionmanager": "^11.5",
    "typo3/cms-felogin": "^11.5",
    "typo3/cms-filelist": "^11.5",
    "typo3/cms-fluid": "^11.5",
    "typo3/cms-fluid-styled-content": "^11.5",
    "typo3/cms-form": "^11.5",
    "typo3/cms-frontend": "^11.5",
    "typo3/cms-impexp": "^11.5",
    "typo3/cms-indexed-search": "^11.5",
    "typo3/cms-info": "^11.5",
    "typo3/cms-install": "^11.5",
    "typo3/cms-linkvalidator": "^11.5",
    "typo3/cms-lowlevel": "^11.5",
    "typo3/cms-opendocs": "^11.5",
    "typo3/cms-recordlist": "^11.5",
    "typo3/cms-redirects": "^11.5",
    "typo3/cms-reports": "^11.5",
    "typo3/cms-rte-ckeditor": "^11.5",
    "typo3/cms-scheduler": "^11.5",
    "typo3/cms-seo": "^11.5",
    "typo3/cms-setup": "^11.5",
    "typo3/cms-tstemplate": "^11.5",
    "helhum/typo3-console": "^7.0",
    "bk2k/bootstrap-package": "dev-master",
    "typo3/cms-styleguide": "^11.5",
    "clue/phar-composer":"^1.0"
  },
  "autoload": {
    "psr-4": {
      "Blueways\\BwIcons\\": "Classes/"
    }
  },
  "scripts": {
    "typo3-cms-scripts": [
      "ln -sfn ../../../ public/typo3conf/ext/bw_icons"
    ],
    "post-autoload-dump": [
      "@typo3-cms-scripts"
    ],
    "create-libs": [
      "mkdir -p Libraries",
      "vendor/bin/phar-composer build 'sabberworm/php-css-parser=8.4.0' Libraries/sabberworm-php-css-parser.phar",
      "vendor/bin/phar-composer build 'phenx/php-font-lib=0.5.4' Libraries/phenx-php-font-lib.phar",
      "chmod -x Libraries/*"
    ]
  },
  "require": {
    "sabberworm/php-css-parser": "8.4.0",
    "ext-simplexml": "*",
    "ext-json": "*",
    "typo3/cms-core": "^9.0 || ^10.0 || ^11.0",
    "phenx/php-font-lib": "0.5.4"
  }
}
